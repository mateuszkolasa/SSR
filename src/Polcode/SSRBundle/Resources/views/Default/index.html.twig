{% extends "::base.html.twig" %}

{% block body %}
    <div class="tablica bevel all" style="background: #aaa; padding: 50px 0;" ng-controller="TablicaController as tablica">
        <div style="background: #000; color: #fff; margin: 0 10px; box-sizing: border-box;">
            <h1 style="font-family: Calibri;">[[ tablica.getStop().name ]]</h1>
            <table style="width: 100%; text-align: left;">
                <tr>
                    <th style="width: 15%; color: #fff; border-right: 3px solid #eee;">Linia nr</th>
                    <th style="width: 65%; color: #fff; border-right: 3px solid #eee;">Kierunek</th>
                    <th style="width: 20%; color: #fff;">Odjazd</th>
                </tr>
                <tr ng-repeat="tram in tablica.getTrams()" class="digital">
                    <td>[[tram.line]]</td>
                    <td>[[tram.direction]]</td>
                    <td>[[tram.time]]</td>
                </tr>
                <tr class="digital">
                    <td colspan="2">*** POLCODE ***</td>
                    <td>[[ tablica.datetime | date:'HH:mm' ]]</td>                    
                </tr>
            </table>
        </div>
    </div>
    
    <style>
    @font-face {
        font-family: 'Digital';
        src: url('/font/SUBWT.ttf');/*SFTelegraphic.ttf');*/
    }
    
    body {
        font-family: 'Calibri', sans-serif;
        margin: 0;
    }
    
    a:link, a:visited {
        color: #888;
        text-decoration: none;
    }
    
    a:hover {
        color: #aaa;
    }
    
    .slupek {
        width: 15%;
        height: 200px;
        min-height: 100%;
        max-height: 100%;
        background: #222;
        overflow: auto;
        float: left;
    }
    
    .slupek h1 {
        color: #777;
        margin: 0;
    }
    
    .slupek ul, .slupek ul li {
        list-style-type: none;
        margin: 0;
        padding: 5px;
    }
    
    .tablica h1 {
        font-size: 32pt;
        margin: 0;
    }
    
    table {
        font-size: 20pt;
        font-family: Calibri;
    }
    
    .digital {
        color: orange;
        font-family: Digital;
        letter-spacing: 3pt;
    }
    </style>
{% endblock %}
